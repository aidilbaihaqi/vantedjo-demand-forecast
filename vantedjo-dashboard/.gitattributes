# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.ipynb text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Data files
*.csv text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.pkl binary
*.joblib binary
*.h5 binary
*.model binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary
